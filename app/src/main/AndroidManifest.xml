<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hu.bme.wlassits.budget">

    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />



        <activity android:name=".presentation.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name=".presentation.DashboardActivity" />
        <activity android:name=".presentation.OutlaysActivity" />
        <activity android:name=".presentation.IncomesActivity" />
        <activity android:name=".presentation.StatisticsActivity" />


    </application>


</manifest>
