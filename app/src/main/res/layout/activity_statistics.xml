<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <!-- TODO Gyuri 7.> layout megtervezése, miket akarsz rajta mutatni-->
    <!-- TODO Gyuri 7.> pl 2 textview > income és outlay , chartokkal még ne törődj-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"/>


    <Button
        android:id="@+id/btnOutlaysSum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOutlay"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:background="@color/primary_dark"
        android:text="Outlay Statistics"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btnIncomesSum"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnOutlay"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp"
        android:background="@color/primary_dark"
        android:text="Income Statistics"
        android:textColor="@color/white" />



</LinearLayout>