<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/component_outlay_maxheight"
    android:layout_gravity="center_horizontal"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="@dimen/component_outlay_iconsize"
        android:layout_height="@dimen/component_outlay_iconsize"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        tools:src="@drawable/app_logo"
        android:layout_centerVertical="true"
        android:contentDescription="@string/outlayitemicon" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/ivIcon"
        android:id="@+id/rlDetails"
        android:layout_centerVertical="true">

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        tools:text="Nagybevásárlás"/>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDescription"
        android:layout_margin="3dp"
        tools:text="2017.10.10 11:11:11"/>


    </RelativeLayout>

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        tools:text="dasdasdas"
        android:textSize="20sp"
        android:layout_toEndOf="@+id/rlDetails"
        android:layout_centerVertical="true"/>
    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:background="#000000"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
